@model IEnumerable<Fleet_WorkShop.Models.EmployeeModel>

@{
    WebGrid webGrid = new WebGrid(source: Model, canSort: false, canPage: false);
}
<link href="~/ScriptsCss/Bindings.css" rel="stylesheet" />

    <table class="table" style="margin:120px">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AadharNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doj)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DepartName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDesignation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayrollCompany)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.RelievingDate)
            </th>



            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AadharNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doj)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DepartName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpDesignation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PayrollCompany)
                </td>

                @if (item.RelievingDate != null)
                {
                    <th>
                        @Html.DisplayFor(modelItem => item.RelievingDate)
                    </th>
                }

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmpId })
                    @Ajax.ActionLink("Delete", "Delete", new { id = item.EmpId }, new AjaxOptions()
       {
           HttpMethod = "Delete",
           Confirm = "Are you sure you want to delete this Record?",
           OnComplete = "function() { $(this).parent().parent().remove() }"
       })
                </td>
            </tr>
        }

    </table>


