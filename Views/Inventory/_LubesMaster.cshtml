@model IEnumerable<Fleet_WorkShop.Models.LubesModel>
@{
    WebGrid webGrid = new WebGrid(source: Model, canSort: false, canPage: false);
}
<link href="~/ScriptsCss/Bindings.css" rel="stylesheet" />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ManufacturerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OilName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostPerLitre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LubricantNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ManufacturerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OilName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostPerLitre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LubricantNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "LubesMasterEdit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteLubesMaster", new { id= item.Id })
        </td>
    </tr>
}

</table>
