<script type="text/javascript">
    $(document).ready(function () {

        $("#Category").prop("disabled", true);

        $("#Aggregates").change(function () {
            if ($('#Aggregates option:selected').text().toLowerCase() == "--select--") {
                $('#Category option:selected').text('');
                $('#Category').prop("disabled", true);
                return false;
            }
            var serviceURL = '/Job/GetCategoriesForAggregates';
            var data = {
                AggregateId: $('#Aggregates').val()

            };
            $.ajax({
                url: serviceURL,
                type: "POST",
                data: JSON.stringify(data),
                datatype: "json",
                contentType: 'application/json',

                success: function (Response) {

                    $('#Category').empty();
                    //$('#Vehicle').append('<option value=0 selected="selected">--Select--</option>').selectmenu('refresh');
                    for (var i = 0; i < Response.length; i++) {

                        $('#Category').append("<option value='" + Response[i].split('-')[1] + "' >" + Response[i].split('-')[0] + "</option>");

                    }

                    $('#Category').prop("disabled", false);


                }
                //error : function (err) {
                //    alert("Error in Getting Vehicles!!");
                //}

            });


        });
    });
    $(document).ready(function () {

        $("#SubCategory").prop("disabled", true);

        $("#Category").change(function () {
            if ($('#Category option:selected').text().toLowerCase() == "--select--") {
                $('#Category option:selected').text("");
                $('#SubCategory').prop("disabled", true);
                return false;
            }
            var serviceURL = '/Job/GetSubCategoryIds';
            debugger;
            var data = {
                categoryId: $('#Category option:selected').val()

            };
            $.ajax({
                url: serviceURL,
                type: "POST",
                data: JSON.stringify(data),
                datatype: "json",
                contentType: 'application/json',

                success: function (Response) {

                    $('#SubCategory').empty();
                    //$('#Vehicle').append('<option value=0 selected="selected">--Select--</option>').selectmenu('refresh');
                    for (var i = 0; i < Response.length; i++) {

                        $('#SubCategory').append("<option value='" + Response[i].split('-')[1] + "' >" + Response[i].split('-')[0] + "</option>");

                    }

                    $('#SubCategory').prop("disabled", false);


                }
                //error : function (err) {
                //    alert("Error in Getting Vehicles!!");
                //}

            });


        });
    });
    $(function () {
        $('#btnchange').click(function () {
            var value = $(this).val();
            if (value === 'Add New') {
                $('#SubCategory').replaceWith($('<input/>', { 'type': 'text', 'placeholder': 'Add SubCategory', 'id': 'txtSub', 'class': "form-control",'style':"color:white;background-color:lightgrey" }));
              $('#btnchange').val('Add Existing')
            }
            else
            {
                $("#txtSub").replaceWith('<select id="SubCategory" class="form-control"> </select>');
                $('#btnchange').val('Add New')
            }
        });

    });
    $(function () {
        $('#btn').click(function () {
            var serviceURL = '/Vehicle/AddIssues';
            var data = {
                Aggregates: $('#Aggregates option:selected').val(),
                Categories: $('#Category option:selected').val(),
                SubCategories: $('#SubCategory').val()
            }
            alert(JSON.stringify(data))
            $.ajax({
                type: "POST",
                url: serviceURL,
                data: JSON.stringify(data),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response != 0) {
                        alert('Record Inserted');
                    }

                },
                failure: function (response) {
                    alert(response.responseText);
                }

            });
        })
    })
</script>

