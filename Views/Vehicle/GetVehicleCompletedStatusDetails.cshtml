@using System.Data
<style>
    #tbl {
        border-collapse: collapse;
        width: 50%;
        margin-left: -400px;
    }
    #tbltoalBill {
        border-collapse: collapse;
        border: 1px solid black;
        width: 100%;
    }
    #tblSpares {
        border-collapse: collapse;
        width: 100%;
    }
    #tbllubes {
        border-collapse: collapse;
        width: 100%;
    }
    #tbllabours {
        border-collapse: collapse;
        width: 50%;
    }


    #tbl, th, td {
        border: 1px solid black;
    }
    th {
        background-color: #4CAF50;
        color: white;
    }
    th td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    td {
        height: 20px;
        vertical-align: bottom;
    }
    a.printimage
    {
        display: block;
        font-size: 15px;
        margin-left: 950px;
        color: whitesmoke;
        background-color: black;
        margin-top: 20px;
        align-content: center;
        text-align: center;
    }
    tr:hover {background-color: #f5f5f5;}
    tr:nth-child(even) {background-color: #f2f2f2;}
</style>
@Html.ActionLink("Print","GetInvoicePrint","Vehicle",new { @class = "printimage" })
<div class="panel panel-primary" style="height: 100%; margin-top:30px; width: 100%;" align="center">
    <div class="panel-heading">
        Invoice
    </div>
    <div class="panel-body" id="orderItems" style="margin-top:10px;" align="center">
        
    <table id="tbl">
            
        <tr>
            <th>Vehicle Number</th>
            <th>District </th>

            <th>Location</th>

            <th>Odometer</th>

        </tr>

        @if (ViewBag.AddressDetails != null)

        {
            var dataTable = ViewBag.AddressDetails as DataTable;
            if (dataTable != null)
            {
                foreach (DataRow dr in dataTable.Rows)

                {
                    <tr>
                        <td>
                            @ViewBag.VehicleNumber
                        </td>
                        <td>

                            @dr["District"]

                        </td>

                        <td>

                            @dr["Location"]

                        </td>

                        <td>

                            @dr["Odometer"]

                        </td>
                    </tr>
                }
            }
        }

    </table>
    <div class="panel panel-primary" style="height: 100%; margin-right:-600px; margin-top: -50px; width: 40%;" align="center">
    <div class="panel-heading">
        Bill Details
    </div>
        <div class="panel-body" id="FinalBillgrid" style="margin-top: 10px;" align="center">
            <table id="tbltoalBill">
                <tr>
                    <th>Item</th>
                    <th>Amount</th>

                </tr>
                <tr>
                    <td>
                        Spare parts
                    </td>
                    <td>
                        @ViewBag.SparePartsBill
                    </td>
                </tr>
                <tr>
                    <td>
                        Lubricants
                    </td>
                    <td>
                        @ViewBag.LubesBill
                    </td>
                </tr>
                <tr>
                    <td>
                        Labor Charges
                    </td>
                    <td>
                        @ViewBag.LaborBill
                    </td>
                </tr>
            </table>
            <label id="lblSparesTotalBill" style="color: brown; margin-top: 5px;margin-right: -35px">Final Bill:@ViewBag.FinalBillAmount</label>
            
        </div>
</div>
   
    <div class="panel panel-primary" style="height: 100%; margin-top: 15px; width: 100%;" align="center">
        <div class="panel-heading">
            Spare Parts
        </div>
        <div class="panel-body" id="sparesgrid" style="margin-top: 10px;" align="center">
            <table id="tblSpares">

                <tr>
                    <th>Id</th>
                    <th>Spare Parts</th>
                    <th>Part Number</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Amount</th>

                </tr>

                @if (ViewBag.ShowSparesGrid != null)

                {
                    var dataTable = ViewBag.ShowSparesGrid as DataTable;
                    if (dataTable != null)
                    {
                        foreach (DataRow dr in dataTable.Rows)

                        {
                            <tr>

                                <td>

                                    @dr["Id"]

                                </td>

                                <td>

                                    @dr["PartName"]

                                </td>
                                <td>

                                    @dr["partnumber"]

                                </td>
                                <td>

                                    @dr["quantity"]

                                </td>
                                <td>

                                @dr["Cost"]

                                <td>

                                    @dr["totalamount"]

                                </td>
                            </tr>
                        }
                    }
                }

            </table>
            <label id="lblSparesTotal" style="margin-right: -700px; color: brown; margin-top: 10px">Total:@ViewBag.SparePartsBill</label>

        </div>
        <div class="panel-footer">

        </div>
    </div>


    <div class="panel panel-primary" style="height: 100%; margin-top: 15px; width: 100%;" align="center">
        <div class="panel-heading">
            Labor Charges
        </div>
        <div class="panel-body" id="laborGrid" style="margin-top: 10px;" align="center">
            <table id="tbllabours">

                <tr>
                    <th>Sub Categories</th>
                    <th>Labor Charges</th>

                </tr>

                @if (ViewBag.GetLaborChargesReport != null)

                {
                    var dataTable = ViewBag.GetLaborChargesReport as DataTable;
                    if (dataTable != null)
                    {
                        foreach (DataRow dr in dataTable.Rows)

                        {
                            <tr>

                                <td>

                                    @dr["SubCategory"]

                                </td>

                                <td>

                                    @dr["LaborCharges"]

                                </td>

                            </tr>
                        }
                    }
                }

            </table>
            <label id="lblLabor" style="margin-right: -35px; color: brown; margin-top: 10px">Total:@ViewBag.LaborBill</label>
        </div>
        <div class="panel-footer">

        </div>
    </div>

    <div class="panel panel-primary" style="height: 100%; margin-top: 15px; width: 100%;" align="center">
        <div class="panel-heading">
            Lubricant
        </div>
        <div class="panel-body" id="lubesgrid" style="margin-top: 10px;" align="center">
            <table id="tbllubes">

                <tr>
                    <th>Id</th>
                    <th>Lubricant</th>

                    <th>Lubricant Number</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Amount</th>

                </tr>

                @if (ViewBag.ShowSparesGrid != null)

                {
                    var dataTable = ViewBag.ShowLubesGrid as DataTable;
                    if (dataTable != null)
                    {
                        foreach (DataRow dr in dataTable.Rows)

                        {
                            <tr>

                                <td>

                                    @dr["Id"]

                                </td>

                                <td>

                                    @dr["OilName"]

                                </td>
                                <td>

                                    @dr["lubricantnumber"]

                                </td>
                                <td>

                                    @dr["quantity"]

                                </td>
                                <td>

                                    @dr["CostPerLitre"]

                                </td>
                                <td>

                                    @dr["totalamount"]

                                </td>
                            </tr>
                        }
                    }
                }

            </table>
            <label id="lblLubesTotal" style="margin-right: -700px; color: brown; margin-top: 10px">Total:@ViewBag.LubesBill</label>
        </div>
        <div class="panel-footer">

        </div>
    </div>
    <div class="panel-footer">

    </div>
    </div></div>
