@model Aggregates


<div class="panel panel-primary" style="height: 100%; margin-top: 20px; width: 100%;" align="center">
    <div class="panel-heading">
        Aggregates
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="form-group">
                @Html.LabelFor(model => model.ManufacturerId, new {@class = "control-label col-md-2"})
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.ManufacturerId, Model.AggregateList, "--Select--", new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.ManufacturerId, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AggregateName, new {@class = "control-label col-md-2"})
                <div class="col-md-6">
                    @Html.EditorFor(model => model.AggregateName, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.AggregateName, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <input type="submit" value="Save" class="btn btn-default" style="background-color: blue; color: white;"/>
                </div>
            </div>
        </div>
    }

</div>

<div>
    @Html.ActionLink("Back", "ServiceGroup")
</div>