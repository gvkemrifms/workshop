@model IEnumerable<Aggregates>


<div class="panel panel-primary" style="height: 100%; margin-top: 20px; width: 100%;" align="center">
    <div class="panel-heading">
        Aggregates Cost
    </div>
    <div class="panel-body">
        <div class="col-lg-6">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="control-label  col-lg-4">Vendor</label>
                    <div class="col-lg-8">
                        @Html.DropDownList("Aggregates", ViewBag.Aggregates as IEnumerable<SelectListItem>, "--Select--", new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-4">Bill Amount</label>
                    <div class="col-lg-8">
                        <label id="lblBillAmount" class="form-control"></label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>