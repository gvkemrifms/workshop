    }
}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <button type="submit" id="btn" class="btn btn-default"  style="margin-bottom: -30px; width:100px; background-color: blue; color: white">Save</button>
                        </div>
                    </div>
                </div>
</div>

        }
    </div>
        <div>
            @Html.ActionLink("Back ", "GetEmployeeDetails")
        </div>


