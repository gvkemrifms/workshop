        <td>
            @ViewBag.District
        </td>
    </tr>
    <tr>
        <td>
            Date Of Repair:
        </td>
        <td>
            @ViewBag.DOR
        </td>
    </tr>
    <tr>
        <td>
            DOD (Approx):
        </td>
        <td>
            @ViewBag.DOD
        </td>
    </tr>
</table>

<table id="tblSpares" style="margin-bottom:10px; margin-top: 30px;">

    <tr>
        <th>Id</th>
        <th>Aggregates</th>
        <th>Categories</th>
        <th>Sub Category</th>
        <th>Approximate Cost</th>
        <th>Estimated Time(In Min)</th>

    </tr>

    @if (ViewBag.Issues != null)

    {
        var dataTable = ViewBag.Issues as DataTable;
        if (dataTable != null)
        {
            foreach (DataRow dr in dataTable.Rows)

            {
                <tr>

                    <td>

                        @dr["jobcardnumber"]

                    </td>

                    <td>

                        @dr["Aggregates"]

                    </td>
                    <td>

                        @dr["Categories"]

                    </td>
                    <td>

                        @dr["Service_Name"]

                    </td>
                    <td style="text-align: right">

                        @dr["ApproxCost"]
                    </td>

                    <td style="text-align: right">

                        @dr["EstimatedTime"]

                    </td>
                </tr>
            }
        }
    }

</table>
